#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# 1. Backend unit tests
echo "ğŸ§ª Running backend unit tests..."
cd server
yarn test:unit
if [ $? -ne 0 ]; then
  echo "âŒ Backend unit tests failed!"
  exit 1
fi

# 2. Backend TypeScript build
echo "ğŸ”¨ Building backend TypeScript..."
yarn build
if [ $? -ne 0 ]; then
  echo "âŒ Backend TypeScript build failed!"
  exit 1
fi
cd ..

# Navigate to Cardoon directory
cd Cardoon

# 3. Type checking with TypeScript
echo "ğŸ“ Checking TypeScript types..."
yarn type-check
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript type check failed!"
  exit 1
fi

# 4. Lint and format staged files
echo "ğŸ§¹ Running ESLint and Prettier on staged files..."
yarn lint-staged
if [ $? -ne 0 ]; then
  echo "âŒ Linting failed!"
  exit 1
fi

# 5. Run frontend tests
echo "ğŸ§ª Running frontend tests..."
yarn test:run
if [ $? -ne 0 ]; then
  echo "âŒ Frontend tests failed!"
  exit 1
fi
echo -e "\a"
echo "âœ… All checks passed! Committing..."