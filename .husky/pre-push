#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸš€ Running pre-push checks..."

# 1. Backend unit tests with coverage
echo "ğŸ§ª Running backend unit tests with coverage..."
cd server
yarn test:coverage
if [ $? -ne 0 ]; then
  echo "âŒ Backend unit tests failed!"
  exit 1
fi
cd ..

# Navigate to Cardoon directory
cd Cardoon

# 2. Run full linting
echo "ğŸ§¹ Running full ESLint check..."
yarn lint
if [ $? -ne 0 ]; then
  echo "âŒ Full lint check failed!"
  exit 1
fi

# 3. Type checking
echo "ğŸ“ Checking TypeScript types..."
yarn type-check
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript type check failed!"
  echo -e "\a"  # Beep de succÃ¨s
  exit 1
fi

# 4. Frontend tests with coverage
echo "ğŸ§ª Running frontend tests with coverage..."
yarn test --run --coverage
if [ $? -ne 0 ]; then
  echo "âŒ Frontend tests failed!"
  exit 1
fi

# 5. Build check
echo "ğŸ—ï¸  Checking if build works..."
yarn build
if [ $? -ne 0 ]; then
  echo "âŒ Build failed!"
  echo -e "\a\a"  # Double beep d'erreur
  exit 1
fi

echo "âœ… All pre-push checks passed!"