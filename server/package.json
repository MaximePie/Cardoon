{
  "name": "server",
  "version": "1.0.0",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "test": "cross-env NODE_OPTIONS=\"--loader ts-node/esm --no-warnings\" node --test src/**/*.test.ts",
    "test:unit": "cross-env NODE_OPTIONS=\"--loader ts-node/esm --no-warnings\" node --test src/**/*.test.ts",
    "test:watch": "cross-env NODE_OPTIONS=\"--loader ts-node/esm --no-warnings\" node --test --watch src/**/*.test.ts",
    "test:coverage": "cross-env NODE_OPTIONS=\"--loader ts-node/esm --no-warnings\" c8 node --test src/**/*.test.ts",
    "test:coverage:report": "cross-env NODE_OPTIONS=\"--loader ts-node/esm --no-warnings\" c8 --reporter=html --reporter=text node --test src/**/*.test.ts",
    "test:userservice": "npx tsx --test src/services/UserService.test.ts",
    "app": "nodemon app.js",
    "start": "node ./dist/app.js",
    "build": "tsc",
    "dev": "nodemon -x npx tsx ./src/app.ts",
    "dev:clean": "node ../scripts/kill-port.js 3000 && npm run dev",
    "kill-port": "node ../scripts/kill-port.js 3000",
    "security-test": "node scripts/security-test.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.740.0",
    "@aws-sdk/lib-storage": "^3.740.0",
    "@mistralai/mistralai": "^1.6.0",
    "aws-sdk": "^2.1692.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^8.1.0",
    "formidable": "^3.5.2",
    "helmet": "^8.1.0",
    "js-cookie": "^3.0.5",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.9.5",
    "typescript": "^5.8.2",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/express-rate-limit": "^6.0.0",
    "@types/formidable": "^3.4.5",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "c8": "^10.1.3",
    "cross-env": "^10.1.0",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3"
  }
}
