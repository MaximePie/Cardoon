{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "incremental": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts", "src/api/cards.ts"],
  "exclude": ["node_modules"]
}
